FROM stns:ubuntu-x86
FROM golang:latest
ADD . /go/src/github.com/STNS/lib-stns
WORKDIR /go/src/github.com/STNS/lib-stns
RUN go get github.com/tools/godep && godep restore
CMD GOARCH=amd64 go build -o binary/libnss-stns.so -buildmode=c-shared nss/main.go nss/resource.go nss/passwd.go nss/shadow.go nss/group.go && \
GOARCH=amd64 go build -o binary/libpam-stns.so -buildmode=c-shared pam/main.go pam/auth.go pam/link_methods.go && \
GOARCH=amd64 go build -o binary/stns-query-wrapper cmd/query/stns-query-wrapper.go && \
GOARCH=amd64 go build -o binary/stns-key-wrapper cmd/key/stns-key-wrapper.go
