FROM pyama/stns:ubuntu-<%= arch %>
ADD . /go/src/github.com/STNS/libnss_stns
WORKDIR /go/src/github.com/STNS/libnss_stns
RUN godep restore
CMD go build -o binary/libnss-stns.so -buildmode=c-shared nss/nss.go nss/resource.go nss/cache.go nss/passwd.go nss/shadow.go nss/group.go && \
go build -o binary/libpam-stns.so -buildmode=c-shared pam/pam.go pam/certifier.go pam/pam_methods.go && \
go build -o binary/stns-query-wrapper cmd/query/stns-query-wrapper.go && \
go build -o binary/stns-key-wrapper cmd/key/stns-key-wrapper.go
